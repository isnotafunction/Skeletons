<div class="container">
  <div class="register__container">
    <form action="/register" method="POST" class="form">
      <label for="username">Username</label>
      <input type="text" name="username" value="" id="username s-login__reg-username" class="input">
      <label for="password">Password</label>
      <input type="password" name="password" id="password s-login__reg-password" class="input">
      <span id="s-login__username-password-error"></span>
      <label for="password">Confirm Password</label>
      <input type="password" name="confirm-password" id="confirm-password s-login__confirm-password" class="input">
      <button type="submit" class="button" id="s-login__reg-submit">submit</button>
    </form>
  </div>

  <div class="login__container">
    <form action="/login" method="POST" class="form">
      <label for="login-username">Username</label>
      <input type="text" name="username" value="" id="login-username" class="input">
      <label for="login-password">Password</label>
      <input type="password" name="password" id="login-password" class="input">
      <button type="submit" class="button" id="s-login__login-submit">submit</button>
    </form>
  </div>
</div>